{
  "name": "tiny-lr",
  "version": "0.2.1",
  "description": "Tiny LiveReload server, background-friendly",
  "main": "./lib",
  "bin": "./cli/bin/tiny-lr",
  "scripts": {
    "start": "bake",
    "test": "bake test"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "autoprefixer": "^6.4.0",
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "body": "^5.1.0",
    "cssnano": "^3.7.3",
    "debug": "~2.2.0",
    "faye-websocket": "~0.10.0",
    "livereload-js": "^2.2.0",
    "minimist": "^1.2.0",
    "precss": "^1.4.0",
    "qs": "^6.2.0",
    "roar-cli": "^0.2.1",
    "tilt-assets": "0.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-regenerator": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "bake-cli": "^0.1.6",
    "eslint": "^2.11.1",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "express": "^4.1.1",
    "mocha": "^2.3.3",
    "standard-version": "^2.2.1",
    "supertest": "^1.2.0",
    "watchd": "github:mklabs/watchd"
  },
  "author": "mklabs",
  "homepage": "https://github.com/mklabs/tiny-lr",
  "bugs": "https://github.com/mklabs/tiny-lr/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/mklabs/tiny-lr.git"
  },
  "config": {
    "test_port": "9001"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": "es2015"
        }
      ]
    ],
    "debug": true
  },
  "postcss": {
    "use": [
      "autoprefixer",
      "precss",
      "cssnano"
    ],
    "autoprefixer": {
      "browsers": "> 5%"
    },
    "cssnano": {
      "discardComments": false
    },
    "map": true
  },
  "license": "MIT"
}
